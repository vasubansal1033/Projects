<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
 ">

<!--    setter injection   -->
    <bean class="com.springcore.Student" name="student1">
        <property name="studentId">
            <value>1</value>
        </property>

        <property name="studentName">
            <value>Vasu</value>
        </property>

        <property name="studentAddress">
            <value>Domlur</value>
        </property>
    </bean>

    <bean class="com.springcore.Student" name="student2">
        <property name="studentId" value="2"/>
        <property name="studentName" value="Bansal"/>
        <property name="studentAddress" value="Bathinda"/>
    </bean>

<!--    setter injection using p-schema     -->
    <bean class="com.springcore.Student" name="student3" p:studentId="3" p:studentName="Bonda" p:studentAddress="Punjab"/>

</beans>